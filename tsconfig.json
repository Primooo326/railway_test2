{
	"compilerOptions": {
	  "target": "es2020",
	  "module": "ES2020",
	  "outDir": "./dist",
	  "esModuleInterop": true,
	  "sourceMap": true,
	  "strict": true,
	  "moduleResolution": "node",
	  "resolveJsonModule": true,
	  "declaration": false,
	  "noImplicitAny": false,
	},
	"include": [
	  "src/**/*"
	],
	"exclude": [
	  "node_modules",
	  "**/*.spec.ts"
	]
  }